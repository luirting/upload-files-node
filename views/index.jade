doctype html
html(lang="en")
  head
    title upload-files-node
    meta(charset="utf-8")
    link(href="/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet")
    script(type="text/javascript" src="/libs/jquery/jquery-3.1.0.min.js")
    script(type="text/javascript" src="/libs/bootstrap/js/bootstrap.min.js")
  body
    div(class="container")
      div(class="col-md-12 panel panel-default well" style="margin-top: 100px;")
        div(class="page-header text-center")
          h1 Upload File #[small NodeJS]
        div(class="panel-body")
          form()
            div(class="form-group")
              label(for="inputFileName") File Name
              input(type="text" class="form-control" id="inputFileName" placeholder="File Name")
            div(class="form-group")
              label(for="inputFile") File
              input(type="file" id="inputFile")
              p(class="help-block") Select some file to upload
            button(type="submit" class="btn btn-primary") Submit
