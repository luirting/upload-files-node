doctype html
html(lang="en")
  head
    title upload-files-node (ListFiles)
    meta(charset="utf-8")
    link(href="/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet")
    script(type="text/javascript" src="/libs/jquery/jquery-3.1.0.min.js")
    script(type="text/javascript" src="/libs/bootstrap/js/bootstrap.min.js")
  body
    div(class="container")
      div(class="col-md-12" style="margin-top: 20px;")
        h1 Welcome ListFiles
        a(href="/newFile") Upload new file
        br
        a(href="/") Back Home
      div(class="col-md-12" style="margin-top: 5px;")
        h1 File List
        table(class="table table-bordered")
          thread
            tr
              th ID
              th FileName
              th FilePath
              th Action
          tbody
            for data in result
              tr
                td #{data.id}
                td #{data.fileName}
                td #{data.filePath}
                td
                  a(href="/download/#{data.id}" target="_blank") Download
